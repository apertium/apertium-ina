<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="ia-morph">
    <pipeline>
      <program name="lt-proc -w">
        <file name="ia.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ia-gener">
    <pipeline>
      <program name="lt-proc -g">
        <file name="ia.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ia-tagger">
    <pipeline>
      <program name="lt-proc -w">
        <file name="ia.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="ia.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="ia-disam">
    <pipeline>
      <program name="lt-proc -w">
        <file name="ia.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-ia.ia.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>

